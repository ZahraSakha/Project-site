@{
    ViewData["Title"] = "Index";
}

<div id="carouselSliderImages" class="carousel slide row" data-ride="carousel" style="height:100%;">
    <ol class="carousel-indicators" style="width:80%; margin-right :20%;">
        <li data-target="#carouselSliderImages" data-slide-to="0" class="active"></li>
        <li data-target="#carouselSliderImages" data-slide-to="1"></li>
        <li data-target="#carouselSliderImages" data-slide-to="2"></li>
        <li data-target="#carouselSliderImages" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block " src="~/images/slider/header-book-1.jpg" alt="First slide">
            <div class="carousel-caption" style="top:45vh;">
                <h5>جهانی پر از کتاب در دستان شما</h5>
                <a asp-controller="Home" asp-action="Register"><button type="button" class="btn button-right  radius-btn">عضو بشوید</button></a>
                <a asp-controller="Products" asp-action="List"><button type="button" class="btn button-left  radius-btn active  ">ورود به فروشگاه</button></a>
