                <a asp-controller="Protected" asp-action="AdminArea"><button type="button" class="btn radius-btn active btn-primary">برو به صفحه محافظت شده ادمین  </button></a>
                <a asp-controller="SalePanel" asp-action="Index"><button type="button" class="btn radius-btn active btn-success">برو به پنل فروش </button></a>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="d-block " src="~/images/slider/header-book-2.jpg" alt="Second slide">
            <div class="carousel-caption" style="top:45vh;">
                <h5>به سایت سخا خوش آمدید</h5>
                <a asp-controller="Home" asp-action="Register"><button type="button" class="btn button-right  radius-btn">عضو بشوید</button></a>
                <a asp-controller="Products" asp-action="List"><button type="button" class="btn button-left  radius-btn active  ">ورود به فروشگاه</button></a>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="d-block " src="~/images/slider/header-book-3.jpg" alt="Third slide">
            <div class="carousel-caption" style="top:45vh;">
                <h5>به سایت سخا خوش آمدید</h5>
                <a asp-controller="Home" asp-action="Register"><button type="button" class="btn button-right  radius-btn">عضو بشوید</button></a>
                <a asp-controller="Products" asp-action="List"><button type="button" class="btn button-left  radius-btn active  ">ورود به فروشگاه</button></a>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="d-block " src="~/images/slider/header-book-4.jpg" alt="Fourth slide">
            <div class="carousel-caption" style="top:45vh;">
                <h5>به سایت سخا خوش آمدید</h5>
                <a asp-controller="Home" asp-action="Register"><button type="button" class="btn button-right  radius-btn">عضو بشوید</button></a>
                <a asp-controller="Products" asp-action="List"><button type="button" class="btn button-left  radius-btn active  ">ورود به فروشگاه</button></a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselSliderImages" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselSliderImages" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>