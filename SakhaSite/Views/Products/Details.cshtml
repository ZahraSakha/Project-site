@model ProductViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Item Details</h1>
@if (Model == null)
{
    <p style="color:red;">Item was not found</p>
}
else
{
    <div>
        <img src="~/images/book.png" />
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <p>@Model.Price</p><span>تومان</span>
        <p>@Model.CountOfAavailable</p>

    </div>
}


