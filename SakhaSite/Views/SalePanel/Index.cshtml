@model List<ProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>SalePanel</h1>

<div class="row">
    <a asp-controller="SalePanel" asp-action="Insert" class="btn btn-success fas fa-plus">افزودن محصول جدید </a>
</div>
<hr />
<hr />
<div class="container-fluid">
    <table class="table table-striped table-responsive-lg table-hover table-bordered ">
        @{int count = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td><p>@(count++)</p></td>
                    <td>
                        <img src="~/images/book.png" style="width:40px;height:40px;" />
                    </td>
                    <td>
                        <h5>@item.Name</h5>
                    </td>
                    <td>
                        <p>@item.Description</p>
                    </td>
                    <td>
                        <p>@item.Price<span>تومان</span></p>
                    </td>
                    <td>
                        <a asp-action="edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </table>
</div>

