@model SakhaSite.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="SalePanel" asp-action="Edit" method="post" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]">
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">نام محصول</label>
                <input asp-for="Name" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">توضیحات</label>
                <input asp-for="Description" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش محصول" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>